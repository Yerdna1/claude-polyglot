#!/bin/bash
# Start LiteLLM proxy for Claude Code Multi-Provider

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_DIR="$(dirname "$SCRIPT_DIR")"
CONFIG_FILE="$PROJECT_DIR/config/litellm_config.yaml"
ENV_FILE="$PROJECT_DIR/.env"
PID_FILE="$HOME/.claude-poly-proxy.pid"
LOG_FILE="$HOME/.claude-poly-proxy.log"
PORT=${LITELLM_PORT:-4000}

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
NC='\033[0m'

# Load environment
if [[ -f "$ENV_FILE" ]]; then
    set -a
    source "$ENV_FILE"
    set +a
fi

# Check if already running
if [[ -f "$PID_FILE" ]]; then
    old_pid=$(cat "$PID_FILE")
    if kill -0 "$old_pid" 2>/dev/null; then
        echo -e "${YELLOW}Proxy already running (PID: $old_pid) on port $PORT${NC}"
        echo -e "Stop it with: ${CYAN}proxy-stop${NC}"
        exit 0
    else
        rm -f "$PID_FILE"
    fi
fi

echo -e "${CYAN}╔═══════════════════════════════════════════════════════════╗${NC}"
echo -e "${CYAN}║${NC} Starting LiteLLM Proxy"
echo -e "${CYAN}║${NC} Port: ${GREEN}$PORT${NC}"
echo -e "${CYAN}║${NC} Config: ${YELLOW}$CONFIG_FILE${NC}"
echo -e "${CYAN}╚═══════════════════════════════════════════════════════════╝${NC}"

# Start proxy in background
nohup litellm --config "$CONFIG_FILE" --port "$PORT" > "$LOG_FILE" 2>&1 &
echo $! > "$PID_FILE"

sleep 2

if kill -0 $(cat "$PID_FILE") 2>/dev/null; then
    echo -e "${GREEN}Proxy started successfully!${NC}"
    echo -e "PID: $(cat "$PID_FILE")"
    echo -e "Endpoint: ${CYAN}http://localhost:$PORT${NC}"
    echo -e "Logs: ${YELLOW}$LOG_FILE${NC}"
    echo ""
    echo -e "Stop with: ${CYAN}proxy-stop${NC}"
else
    echo -e "${RED}Failed to start proxy. Check logs:${NC}"
    tail -20 "$LOG_FILE"
    rm -f "$PID_FILE"
    exit 1
fi
